@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->

<!-- Feature Highlights Section -->
<section class="container my-5">
    <div class="text-center">
        <h2 class="text-dark mb-4">Why Choose SecureBank?</h2>
        <p class="lead text-muted">Reliable, secure, and customer-focused banking services.</p>
    </div>
    <div class="row text-center">
        <div class="col-md-4">
            <div class="card shadow-sm p-4">
                <i class="fas fa-lock fa-3x text-primary mb-3"></i>
                <h5>Secure Transactions</h5>
                <p>Advanced encryption to protect your financial data.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm p-4">
                <i class="fas fa-user-friends fa-3x text-success mb-3"></i>
                <h5>24/7 Customer Support</h5>
                <p>We're here to assist you anytime, anywhere.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm p-4">
                <i class="fas fa-chart-line fa-3x text-warning mb-3"></i>
                <h5>Smart Investments</h5>
                <p>Grow your wealth with our expert financial guidance.</p>
            </div>
        </div>
    </div>
</section>

<!-- User Account Card -->
