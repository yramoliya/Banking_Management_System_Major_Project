<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Banking System Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <style>
        /* Sidebar */
        .sidebar {
            height: 100vh;
            width: 250px;
            position: fixed;
            left: 0;
            top: 0;
            background-color: #343a40;
            color: white;
            padding-top: 20px;
        }

            .sidebar a {
                color: white;
                padding: 15px;
                display: block;
                text-decoration: none;
            }

                .sidebar a:hover {
                    background-color: #495057;
                }

        /* Main Content */
        .main-content {
            margin-left: 250px;
            padding: 20px;
        }

        /* Top Navbar */
        .navbar {
            background-color: #fff;
            box-shadow: 0px 3px 10px rgba(0, 0, 0, 0.1);
        }

        .nav-item i {
            font-size: 20px;
            margin-right: 10px;
            color: #555;
        }

        .profile-menu {
            width: 250px;
        }

        .profile-img {
            width: 40px;
            height: 40px;
            border-radius: 50%;
        }
    </style>
</head>
<body>
    <!-- Top Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light p-3">
        <div class="container-fluid">
            <button class="btn btn-light" id="toggleSidebar"><i class="fas fa-bars"></i></button>
            <div class="d-flex ms-auto align-items-center">
                <div class="nav-item me-3">
                    <i class="fas fa-search"></i>
                </div>
                <div class="nav-item me-3 position-relative">
                    <i class="fas fa-bell"></i>
                    <span class="badge bg-danger position-absolute top-0 start-100 translate-middle">4</span>
                </div>
                <!-- User Profile Dropdown -->
                <div class="dropdown">
                    <button class="btn btn-light dropdown-toggle d-flex align-items-center" type="button" id="profileDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        <img src="profile.jpg" alt="User Profile" class="profile-img me-2">
                        <span id="userName">Loading...</span>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end profile-menu" aria-labelledby="profileDropdown">
                        <li class="dropdown-header text-center">
                            <img src="profile.jpg" alt="User" class="profile-img">
                            <p class="mt-2 mb-0" id="profileEmail">email@example.com</p>
                        </li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="/Admin/#"><i class="fas fa-user-circle"></i> View Profile</a></li>
                        <li><a class="dropdown-item" href="/Admin/Settings"><i class="fas fa-cog"></i> Settings</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item text-danger" href="/Admin/Logout"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-2 col-lg-2 d-md-block sidebar">
                <div class="sidebar-header text-center py-3">
                    <h5> <a href="/Home/Index">🏦 Banking Admin</a></h5>
                </div>
                <a href="/Admin/Index"><i class="fas fa-chart-line"></i> Dashboard</a>
                <a href="/Admin/Users"><i class="fas fa-users"></i> Users</a>
                <a href="/Admin/Transactions"><i class="fas fa-exchange-alt"></i> Transactions</a>
                <a href="/Admin/Accounts"><i class="fas fa-wallet"></i> Accounts</a>
                <a href="/Admin/Loans"><i class="fas fa-file-invoice-dollar"></i> Loans</a>
                <a href="/Admin/Reports"><i class="fas fa-chart-bar"></i> Reports</a>
                <a href="/Admin/Settings"><i class="fas fa-cogs"></i> Settings</a>
                <a href="/Admin/Logout" class="text-danger"><i class="fas fa-sign-out-alt"></i> Logout</a>
            </nav>

            <!-- Main Content -->
            <main class="col-md-10 main-content">
                @RenderBody()
            </main>
        </div>
    </div>
    <br />
    <!-- Footer -->
    <footer>
        <p>2025 © Banking System Admin. Powered by <a href="#">BMS</a>.</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Sidebar Toggle
        document.getElementById("toggleSidebar").addEventListener("click", function () {
            document.querySelector(".sidebar").classList.toggle("d-none");
        });

        // Fetch user data (simulating API request)
        function fetchUserProfile() {
            // Simulating an API call (replace with actual API endpoint)
            setTimeout(() => {
                let userData = {
                    name: "John Doe",
                    email: "john.doe@example.com",
                    profileImg: "https://randomuser.me/api/portraits/men/50.jpg"
                };

                document.getElementById("userName").innerText = userData.name;
                document.getElementById("profileEmail").innerText = userData.email;
                document.querySelectorAll(".profile-img").forEach(img => img.src = userData.profileImg);
            }, 1000);
        }

        fetchUserProfile();
    </script>
</body>
</html>
