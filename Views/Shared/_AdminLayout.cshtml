<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>🏦 Banking System Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
        }

        .sidebar {
            min-height: 100vh;
            background-color: #343a40;
            color: white;
            transition: all 0.3s ease;
        }

            .sidebar a {
                color: white;
                padding: 15px;
                display: block;
                text-decoration: none;
                transition: background-color 0.3s;
            }

                .sidebar a:hover {
                    background-color: #495057;
                }

        .main-content {
            padding: 20px;
        }

        .navbar {
            background-color: #fff;
            box-shadow: 0px 3px 10px rgba(0, 0, 0, 0.1);
        }

        .profile-img {
            width: 40px;
            height: 40px;
            object-fit: cover;
            border-radius: 50%;
        }

        footer {
            text-align: center;
            padding: 10px;
            background-color: #f8f9fa;
            font-size: 14px;
        }

        @@media (max-width: 768px) {
            .sidebar

        {   
            position: fixed;
            z-index: 1000;
            width: 200px;
            left: -200px;
        }

        .sidebar.show {
            left: 0;
        }

        .main-content {
            margin-left: 0 !important;
        }

        }
    </style>
</head>
<body>
    <!-- Top Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light text-light bg-dark">
        <div class="container-fluid">
            <h5 class="mb-0">📊 Admin Dashboard</h5>
            <div class="d-flex ms-auto align-items-center">
                <div class="me-3"><i class="fas fa-search"></i></div>
                <div class="me-3 position-relative">
                    <i class="fas fa-bell"></i>
                    <span class="badge bg-danger position-absolute top-0 start-100 translate-middle">4</span>
                </div>
                <!-- Profile Dropdown -->
                <div class="dropdown">
                    <button class="btn btn-light dropdown-toggle d-flex align-items-center" data-bs-toggle="dropdown">
                        <img src="profile.jpg" class="profile-img me-2" alt="User">
                        <span id="userName">Loading...</span>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li class="dropdown-header text-center">
                            <img src="profile.jpg" class="profile-img mb-2" alt="User">
                            <p class="mb-0" id="profileEmail">email@example.com</p>
                        </li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="#"><i class="fas fa-user-circle"></i> 👤 Profile</a></li>
                        <li><a class="dropdown-item" href="#"><i class="fas fa-cog"></i> ⚙️ Settings</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item text-danger" href="#"><i class="fas fa-sign-out-alt"></i> 🚪 Logout</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <!-- Layout Grid -->
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav id="sidebar" class="col-md-3 col-lg-2 d-md-block sidebar">
                <div class="sidebar-header text-center py-3">
                    <h5>🏦 <a href="/Home/Index" class="text-white text-decoration-none">Banking Admin</a></h5>
                </div>
                <a href="/Admin/Index">📈 <i class="fas fa-chart-line"></i> Dashboard</a>
                <a href="/Admin/Users">👥 <i class="fas fa-users"></i> Users</a>
                <a href="/Admin/Transactions">💸 <i class="fas fa-exchange-alt"></i> Transactions</a>
                <a href="/Admin/Accounts">💼 <i class="fas fa-wallet"></i> Accounts</a> 
                <a href="/Admin/Cards">💼 <i class="fas fa-wallet"></i> Debit Card</a>
                <a href="/Admin/Loans">📄 <i class="fas fa-file-invoice-dollar"></i> Loans</a>
                <a href="/Admin/Reports">📊 <i class="fas fa-chart-bar"></i> Transactions</a>
                <a href="/Admin/Settings">⚙️ <i class="fas fa-cogs"></i> Settings</a>
                <a href="/Admin/Logout" class="text-danger">🚪 <i class="fas fa-sign-out-alt"></i> Logout</a>
            </nav>

            <!-- Main Content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 main-content">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Footer -->
    <footer class="mt-4">
        <p>2025 © Banking System Admin. Powered by 💼 <strong>BMS</strong>.</p>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Sidebar Toggle (Mobile)
        document.getElementById("toggleSidebar").addEventListener("click", function () {
            document.getElementById("sidebar").classList.toggle("show");
        });

        // Mock user fetch
        function fetchUserProfile() {
            setTimeout(() => {
                const user = {
                    name: "Admin User",
                    email: "admin@banking.com",
                    profileImg: "https://randomuser.me/api/portraits/men/50.jpg"
                };
                document.getElementById("userName").innerText = user.name;
                document.getElementById("profileEmail").innerText = user.email;
                document.querySelectorAll(".profile-img").forEach(img => img.src = user.profileImg);
            }, 800);
        }

        fetchUserProfile();
    </script>
</body>
</html>
