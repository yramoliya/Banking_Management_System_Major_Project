@{
    ViewData["Title"] = "About Us";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - Banking System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-luman.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/custom-navbar.css">
</head>
<body>
<section class="container mt-5">
    <div class="row align-items-center">
        <!-- Image Section -->
        <div class="col-lg-6 mb-4">
            <img src="~/image/logo/bms.jpg" alt="Banking System" class="img-fluid rounded shadow">
        </div>

        <!-- Text Section -->
        <div class="col-lg-6">
            <h2 class="fw-bold text-primary">About SecureBank</h2>
            <p class="text-muted">Your Trusted Digital Banking Partner</p>
            <p>
                SecureBank is a next-generation digital banking platform designed to provide
                secure, efficient, and user-friendly financial services. Our mission is to
                revolutionize the banking experience by integrating cutting-edge technology
                with seamless user access.
            </p>
            <ul class="list-unstyled">
                <li>✅ Secure Transactions with Industry-Standard Encryption</li>
                <li>✅ Easy Fund Transfers & Account Management</li>
                <li>✅ 24/7 Customer Support & AI-Driven Fraud Protection</li>
                <li>✅ Personalized Financial Insights</li>
            </ul>
            <a href="/Bank/Contact_us" class="btn btn-primary mt-3">Contact Us</a>
        </div>
    </div>
</section>

<!-- Additional Section -->
<section class="container text-center mt-5">
    <h3 class="fw-bold text-secondary">Why Choose SecureBank?</h3>
    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card shadow p-3">
                <i class="bi bi-shield-lock fs-1 text-primary"></i>
                <h5 class="mt-3">Advanced Security</h5>
                <p>Our banking system employs state-of-the-art security protocols.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow p-3">
                <i class="bi bi-lightning fs-1 text-success"></i>
                <h5 class="mt-3">Fast Transactions</h5>
                <p>Experience quick and hassle-free money transfers.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow p-3">
                <i class="bi bi-people fs-1 text-danger"></i>
                <h5 class="mt-3">24/7 Support</h5>
                <p>Our customer support team is always here to help you.</p>
            </div>
        </div>
    </div>
</section>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>