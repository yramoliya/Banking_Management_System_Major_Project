@model Banking_Management_System_Major_Project.Models.Register_user
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Bootstrap Styled Register Form -->
<section class="vh-80 d-flex align-items-center justify-content-center mt-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-7">
                <div class="card shadow-lg border-0 rounded-4">
                    <div class="card-header bg-primary text-white text-center py-2">
                        <h2 class="fw-bold">Create Account</h2>
                        <p class="mb-0">Join us today!</p>
                    </div>
                    <div class="card-body p-4">
                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
                        }
                        @if (TempData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
                        }

                        <form asp-action="Register" method="post">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                            <div class="mb-3">
                                <label asp-for="Fname" class="form-label fw-bold">First Name</label>
                                <input asp-for="Fname" class="form-control" placeholder="Enter your first name" required />
                                <span asp-validation-for="Fname" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Lname" class="form-label fw-bold">Last Name</label>
                                <input asp-for="Lname" class="form-control" placeholder="Enter your last name" required />
                                <span asp-validation-for="Lname" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Email" class="form-label fw-bold">Email</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-primary text-white"><i class="bi bi-envelope"></i></span>
                                    <input asp-for="Email" class="form-control" placeholder="Enter your email" required />
                                </div>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Password" class="form-label fw-bold">Password</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-primary text-white"><i class="bi bi-lock"></i></span>
                                    <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password" required />
                                </div>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="ConfirmPassword" class="form-label fw-bold">Confirm Password</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-primary text-white"><i class="bi bi-lock"></i></span>
                                    <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm your password" required />
                                </div>
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="bi bi-person-plus"></i> Register
                                </button>
                            </div>

                            <div class="text-center mt-4">
                                <p>Already have an account? <a asp-action="Login" class="text-primary fw-bold">Login Here</a></p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
