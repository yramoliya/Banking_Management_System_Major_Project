@{
    ViewData["Title"] = "LoanService";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Our Loan Services</h1>
    <p class="lead text-center text-muted">Choose the best loan option tailored to your needs.</p>

    <div class="row g-4">
        <!-- Personal Loan Card -->
        <div class="col-md-4">
            <div class="card shadow-lg h-100">
                <img src="~/image/personal_Loan.jpg" class="card-img-top" alt="Personal Loan">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Personal Loan</h5>
                    <p class="card-text">Get fast and easy personal loans for any purpose, with low interest rates.</p>
                    <ul class="list-unstyled">
                        <li><strong>Loan Amount:</strong> $5,000 - $50,000</li>
                        <li><strong>Interest Rate:</strong> 7% - 12%</li>
                        <li><strong>Loan Term:</strong> 12 months - 5 years</li>
                    </ul>
                    <a href="#" class="btn btn-primary mt-auto">Apply Now</a>
                </div>
            </div>
        </div>

        <!-- Home Loan Card -->
        <div class="col-md-4">
            <div class="card shadow-lg h-100">
                <img src="~/image/home_Loan.jpg" class="card-img-top" alt="Home Loan">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Home Loan</h5>
                    <p class="card-text">Purchase your dream home with affordable home loan options.</p>
                    <ul class="list-unstyled">
                        <li><strong>Loan Amount:</strong> $100,000 - $1,000,000</li>
                        <li><strong>Interest Rate:</strong> 3% - 6%</li>
                        <li><strong>Loan Term:</strong> 15 years - 30 years</li>
                    </ul>
                    <a href="#" class="btn btn-primary mt-auto">Apply Now</a>
                </div>
            </div>
        </div>

        <!-- Auto Loan Card -->
        <div class="col-md-4">
            <div class="card shadow-lg h-100">
                <img src="~/image/auto-loan.jpg" class="card-img-top" alt="Auto Loan">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Auto Loan</h5>
                    <p class="card-text">Drive your dream car with a flexible auto loan at attractive rates.</p>
                    <ul class="list-unstyled">
                        <li><strong>Loan Amount:</strong> $10,000 - $100,000</li>
                        <li><strong>Interest Rate:</strong> 4% - 9%</li>
                        <li><strong>Loan Term:</strong> 24 months - 7 years</li>
                    </ul>
                    <a href="#" class="btn btn-primary mt-auto">Apply Now</a>
                </div>
            </div>
        </div>
    </div>
</div>
