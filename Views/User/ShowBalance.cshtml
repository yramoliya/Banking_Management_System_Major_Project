@using Banking_Management_System_Major_Project.Models
@model Banking_Management_System_Major_Project.Models.AdminModel.AccountDetails
@{
    ViewData["Title"] = "Show Balance";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-primary text-white text-center">
                    <h4 class="mb-0">Check Account Balance</h4>
                </div>
                <div class="card-body">
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
                    }
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
                    }

                    <form asp-action="ShowBalance" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="AccountNumber" class="form-label fw-bold">Account Number</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-bank"></i></span>
                                <input asp-for="AccountNumber" class="form-control" placeholder="Enter your account number" required />
                            </div>
                            <span asp-validation-for="AccountNumber" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button type="submit" class="btn btn-success me-md-2"><i class="bi bi-search"></i> Check Balance</button>
                            <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Back to Home</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@if (Model != null)
{

    <div class="container mt-4 border rounded p-4 shadow-sm bg-light">
    <h3 class="text-center mb-4">
        🏦 Passbook for <strong>@Model.Firstname @Model.Lastname</strong>
    </h3>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">@TempData["Message"]</div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="row">
        <div class="col-md-6">
            <p><strong>First Name:</strong> @Model.Firstname</p>
            <p><strong>Middle Name:</strong> @Model.Middlename</p>
            <p><strong>Last Name:</strong> @Model.Lastname</p>
            <p><strong>DOB:</strong> @Model.Dob</p>
            <p><strong>Gender:</strong> @Model.Gender</p>
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>Mobile:</strong> @Model.MobileNumber</p>
            <p><strong>Alternate Number:</strong> @Model.AlternateNumber</p>
        </div>

        <div class="col-md-6">
            <p><strong>Account Number:</strong> @Model.AccountNumber</p>
            <p><strong>Account Type:</strong> @Model.AcType</p>
            <p><strong>Account Balance:</strong> ₹@Model.AcBalance</p>
            <p><strong>Address:</strong> @Model.City, @Model.State, @Model.Country - @Model.Pincode</p>
            <p><strong>PAN Number:</strong> @Model.PanNumber</p>
            <p><strong>Aadhar Number:</strong> @Model.AddharNumber</p>
            <p><strong>Occupation:</strong> @Model.Qulification</p>
        </div>
    </div>
</div>
}
@if (Model?.AcBalance != null)
{
    <div class="container mt-4">
        <div class="alert alert-info text-center">
            <h3>Your Balance: $@Model.AcBalance</h3>
        </div>
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
