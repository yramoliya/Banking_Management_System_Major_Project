@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
    ViewData["Title"] = "Dashboard";
}

<div class="container py-5">
    <div class="text-center mb-4">
        <h2 class="fw-bold text-primary">Welcome to Your Banking Dashboard</h2>
        <p class="text-muted">Manage your banking activities efficiently and securely.</p>
    </div>

    <div class="row justify-content-center">
        <!-- User Account Card -->
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-4 bg-gradient text-bg-success" style="background: linear-gradient(135deg, #007bff, #6610f2);">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="bi bi-person-circle display-4"></i>
                    </div>
                    <h4 class="fw-bold">Account Overview</h4>
                    <hr class="bg-light" />
                    <p><strong>Name:</strong> John Doe</p>
                    <p><strong>Account Number:</strong> 1234-5678-9012</p>
                    <p><strong>Balance:</strong> <span class="fs-5">$5,250.00</span></p>
                    <p><strong>Account Type:</strong> Savings</p>
                    <div class="d-grid">
                        <a href="#" class="btn btn-light btn-lg mt-2 fw-bold"><i class="bi bi-file-earmark-text"></i> View Statement</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Optional: Add animations or effects here
    </script>
}
