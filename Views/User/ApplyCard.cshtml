@model Banking_Management_System_Major_Project.Models.UserModel.ApplyCardViewModel
@{
    ViewData["Title"] = "Apply for a Credit Card";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-primary text-white text-center">
                    <h4 class="mb-0">Apply for a Credit Card</h4>
                </div>
                <div class="card-body">

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
                    }

                    <form asp-action="ApplyCard" method="post" id="applyCardForm">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="form-group">
                            <label>First Name</label>
                            <input asp-for="Firstname" class="form-control" required />
                        </div>
                        <div class="form-group">
                            <label>Last Name</label>
                            <input asp-for="Lastname" class="form-control" required />
                        </div>
                        <div class="form-group">
                            <label>Account Number</label>
                            <input asp-for="AcNumber" class="form-control" required />
                        </div>
                        <div class="form-group">
                            <label>Card Type</label>
                            <select asp-for="CardType" class="form-control">
                                <option>Visa</option>
                                <option>MasterCard</option>
                                <option>RuPay</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Status</label>
                            <select asp-for="Status" class="form-control">
                                <option>Pending</option>
                            </select>
                        </div><br />
                        @* <button type="submit" class="btn btn-success">Submit</button> *@

                        <div class="form-group gap-2 d-md-flex justify-content-md-end">
                            <button type="submit" class="btn btn-success me-md-2"><i class="bi bi-check-circle"></i> Apply</button>
                            <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Back to List</a>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
    <div class="container mt-5">
        <div style="display: flex; justify-content: center; gap: 50px; flex-wrap: wrap;">

            <!-- Front Side of Card -->
            <div style="width: 400px; height: 250px; border-radius: 20px; background: black; color: white; padding: 20px; position: relative; font-family: Arial, sans-serif; box-shadow: 0px 4px 12px rgba(0,0,0,0.5);">
                <div style="font-size: 14px;">PLATINUM</div>
                <div style="font-size: 10px;">INTERNATIONAL CARD</div>

                <div style="position: absolute; top: 20px; right: 20px; text-align: right;">
                    <div style="font-size: 20px;">VISA</div>
                    <div style="font-size: 14px;">DEBIT</div>
                </div>

                <div style="margin-top: 40px;">
                    <img src="https://i.imgur.com/E6NwU0z.png" alt="Chip" style="width: 50px;">
                </div>

                <div style="margin-top: 20px; font-size: 20px; letter-spacing: 3px;">
                    4000 2029 4719 6660
                </div>

                <div style="margin-top: 10px; font-size: 12px;">
                    VALID UPTO: 07/28
                </div>

                <div style="position: absolute; bottom: 20px; left: 20px;">
                    <div style="font-size: 16px;">Bank Management System</div>
                </div>

                <div style="position: absolute; bottom: 20px; right: 20px;">
                    <img src="https://i.imgur.com/vVjzk5V.png" alt="GIR Bank Logo" style="width: 80px;">
                </div>
            </div>

            <!-- Back Side of Card -->
            <div style="width: 400px; height: 250px; border-radius: 20px; background: black; color: white; padding: 20px; position: relative; font-family: Arial, sans-serif; box-shadow: 0px 4px 12px rgba(0,0,0,0.5);">
                <div style="font-size: 12px; margin-bottom: 10px;">
                    Customer Care Number (24 Hours): (+91) 7418529630
                </div>

                <div style="background: white; height: 40px; margin-top: 10px; position: relative;">
                    <div style="position: absolute; right: 10px; top: 5px; background: #0b0b0b; color: #00d4ff; padding: 5px 10px; font-weight: bold; font-size: 18px;">
                        475
                    </div>
                </div>

                <div style="margin-top: 20px; font-size: 10px;">
                    <strong>NOT TRANSFERABLE</strong>
                </div>

                <div style="display: flex; margin-top: 10px; align-items: center;">
                    <img src="https://i.imgur.com/WhbVUBB.png" alt="GIR Bank Blue Logo" style="width: 60px; margin-right: 10px;">
                    <div style="font-size: 10px;">
                        The debit Card is powered by Bank's debit card. Terms & Conditions amended time to time. Should present return to any branch of GIR BANK - GIR SOMNATH. Not valid for Payments in Foreign Exchange in India.
                    </div>
                </div>

                <div style="position: absolute; bottom: 20px; left: 20px;">
                    <div style="font-size: 10px;">#IDMEA 5 1/046038/0224</div>
                </div>

                <div style="position: absolute; bottom: 20px; right: 20px;">
                    <img src="https://i.imgur.com/R7rLHyE.png" alt="Diners Club" style="width: 40px; margin-right: 5px;">
                    <img src="https://i.imgur.com/O7Vx5rq.png" alt="Discover" style="width: 40px;">
                </div>
            </div>

        </div>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function () {
            $("#applyCardForm").validate({
                rules: {
                    FullName: {
                        maxlength: 100
                    },
                    AccountNumber: {
                        pattern: "^[0-9]{10,12}$"
                    },
                    CreditLimit: {
                        range: [5000, 500000]
                    }
                },
                messages: {
                    FullName: {
                        maxlength: "Full Name cannot exceed 100 characters."
                    },
                    AccountNumber: {
                        pattern: "Account number must be 10-12 digits."
                    },
                    CreditLimit: {
                        range: "Credit limit must be between 5,000 and 500,000."
                    }
                },
                errorClass: "text-danger",
                validClass: "text-success",
                errorPlacement: function (error, element) {
                    error.appendTo(element.parent());
                }
            });
        });
    </script>
}
